<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_single_contact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!--<ImageView-->
        <!--android:id="@+id/single_contact_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/btn_single_contacts"/>-->
    <LinearLayout
        android:background="@drawable/btn_click"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/name_head"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <ImageView
                android:background="#367cc7"
                android:layout_centerInParent="true"
                android:id="@+id/name_head_bg"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/name_head_text"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/single_contact_name"
                    android:text="姓名"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/single_contact_name"
                    android:id="@+id/single_contact_num"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="15111225564"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <CheckBox
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>